<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <center><h3>Users </h3></center>
    <div style="max-height:440px;overflow:auto;">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
          <th class="no-sort"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.fullname %></td>
            <% if user.blocked %>
              <td><%= link_to 'Unblock', block_action_path(user.id), class:'btn btn-success btn-xs' %></td>
            <% else %>
              <td><%= link_to 'Block', block_action_path(user.id), class:'btn btn-danger btn-xs' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>