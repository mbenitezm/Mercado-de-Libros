<div class="row">
  <div class="col-md-6">
    <div class="well">
      <%= image_tag @book.image_url %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="well">
      <h1> Price: $<%= @book.price %> </h1>
      <h1> For <%= @book.for_what %> </h1><br>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="well">
    <h2> Name: <%= @book.name %> </h2>
    <h2> Edition: <%= @book.edition %> </h2>
    <h2> Editorial: <%= @book.editorial %> </h2>
    <h2> Year: <%= @book.year %> </h2>
    <%= link_to "Add to transactions!", '#', class:"btn btn-primary",style: "color:white" %>
    </div>
  </div>
</div>